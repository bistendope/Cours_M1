<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.custom.i18n.resources" value="mesTextes"/>



    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="defaut"/>

        <action name="defaut" class="mesActions.Default">
            <result>/WEB-INF/vues/Login.jsp</result>
        </action>


        <action name="login" class="mesActions.Login">
            <result name="success">/WEB-INF/vues/ChoixPartie.jsp</result>
            <result name="input">/WEB-INF/vues/Login.jsp</result>
        </action>

        <action name="jouer" class="mesActions.Jouer">
            <result name="success">/WEB-INF/vues/MonPlateau.jsp</result>
            <result name="gagne">/WEB-INF/vues/Gagne.jsp</result>
            <result name="perdu">/WEB-INF/vues/Perdu.jsp</result>
        </action>

<action name="voirClassement" class="mesActions.VoirClassement">
    <result>/WEB-INF/vues/Classement.jsp</result>
</action>

        <action name="choixPartie" class="mesActions.ChoixPartie">
            <result>/WEB-INF/vues/MonPlateau.jsp</result>
        </action>

        <action name="backToChoix" class="mesActions.Default">
            <result>/WEB-INF/vues/ChoixPartie.jsp</result>
        </action>
        <action name="inscription" class="mesActions.Inscription">
            <result name="success">/WEB-INF/vues/ChoixPartie.jsp</result>
            <result name="input">/WEB-INF/vues/Inscription.jsp</result>
        </action>

        <action name="deconnexion" class="mesActions.Deconnexion">
            <result>/WEB-INF/vues/Login.jsp</result>
        </action>

        <action name="goToInscription" class="mesActions.Default">
            <result>/WEB-INF/vues/Inscription.jsp</result>
        </action>
    </package>

    <!-- Add addition packages and configuration here. -->
</struts>
